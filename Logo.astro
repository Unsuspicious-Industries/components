---
import { SITE } from '~/utils/config';

export interface Props {
  src?: string;
  name?: string;
  acronym?: string;
}

import LogoImg from '~/assets/logo/logo.png';

const { src = LogoImg.src, name = SITE?.name, acronym = SITE?.acronym } = Astro.props;
---

<span class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-xl md:text-xl font-bold whitespace-nowrap">
  <img src={src} alt="Logo" class="inline-block md:inline-block mr-2" style="width: 2em; height: 2em;"/>
  <span class="inline md:hidden">{acronym}</span>
  <span class="hidden md:inline">{name}</span>
</span>
---
import { SITE } from '~/utils/config';

export interface Props {
  src?: string;
  name?: string;
  acronym?: string;
  maxHeight?: string;
}

const { src = "/public/graphics/usi.png", name = SITE?.name, acronym = SITE?.acronym, maxHeight = "2em" } = Astro.props;
---

<span class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-xl md:text-xl font-bold whitespace-nowrap">
  <img 
    src={src} 
    alt="Logo" 
    class="inline-block md:inline-block mr-2" 
    style={`max-height: ${maxHeight}; width: auto; height: auto;`}
  />
</span>
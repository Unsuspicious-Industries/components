---
import '@fontsource/inter'; // Modern, clean font for body
import '@fontsource/space-grotesk'; // Tech-forward font for headings
---

<style is:inline is:global>

  @import url('https://fonts.googleapis.com/css2?family=Space+Mono&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap');

  :root {
    /* Modern Typography */
    --aw-font-sans: 'IBM Plex Mono', sans-serif;
    --aw-font-serif: 'Space Grotesk', sans-serif;
    --aw-font-heading: var(--aw-font-serif);

    /* Light Theme - Professional Tech Colors */
    --aw-color-primary: #2563eb; /* Vibrant blue */
    --aw-color-secondary: #64748b; /* Sophisticated slate */
    --aw-color-accent: #7c3aed; /* Modern purple */

    --aw-color-text-heading: #1e293b;
    --aw-color-text-default: #334155;
    --aw-color-text-muted: #64748b;

    --aw-color-border: #e2e8f0;

    --aw-color-bg-page: #ffffff;
    --aw-color-bg-ft: #f8fafc;
    --aw-color-bg-fancy: #f1f5f9;

    ::selection {
      background-color: rgba(37, 99, 235, 0.2);
      color: #2563eb;
    }
  }

  .dark {
    /* Dark Theme - Research Lab Aesthetic */
    --aw-color-bg-page: #010409;    /* Main background - extremely dark */
    --aw-color-bg-ft: #0d1117;      /* Slightly lifted elements */
    --aw-color-bg-fancy: #161b22;   /* Featured areas */

    /* Adjusted text colors for better contrast against darker bg */
    --aw-color-text-heading: #f8fafc;
    --aw-color-text-default: #e2e8f0;
    --aw-color-text-muted: #94a3b8;

    /* Brighter accent colors to pop against darker background */
    --aw-color-primary: #60a5fa;
    --aw-color-secondary: #94a3b8;
    --aw-color-accent: #a78bfa;


    ::selection {
      background-color: rgba(96, 165, 250, 0.2);
      color: #60a5fa;
    }
  }
</style>

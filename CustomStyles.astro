---
import '@fontsource/inter'; // Professional institutional font
import '@fontsource/crimson-text'; // Academic serif font for headings
---

<style is:inline is:global>

  @import url('https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;600&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap');

  :root {
    /* Academic Typography */
    --aw-font-sans: 'Source Sans Pro', sans-serif;
    --aw-font-serif: 'Crimson Text', serif;
    --aw-font-heading: var(--aw-font-serif);

    /* Institutional Dark Blue Palette */
    --aw-color-primary: #1e40af; /* Rich blue */
    --aw-color-secondary: #1e3a8a; /* Deep blue */
    --aw-color-accent: #3730a3; /* Royal purple-blue */

    --aw-color-text-heading: #1e3a8a;
    --aw-color-text-default: #1f2937;
    --aw-color-text-muted: #4b5159;

    --aw-color-border: #e5e7eb;

    --aw-color-bg-page: #ffffff;
    --aw-color-bg-ft: #f8fafc;
    --aw-color-bg-fancy: #f1f5f9;

    ::selection {
      background-color: rgba(30, 64, 175, 0.1);
      color: #1e40af;
    }
  }
</style>
</style>
